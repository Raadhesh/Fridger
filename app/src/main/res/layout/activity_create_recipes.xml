<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.android.fridger.CreateIngredients">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:id="@+id/relativeRecLayout1">
        <EditText
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:id="@+id/editTextRecName"
            android:hint="Recipe Name"/>
        <EditText
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextRecName"
            android:id="@+id/editTextRecImageURL"
            android:inputType="text"
            android:hint="Recipe Image URL"/>
        <EditText
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextRecImageURL"
            android:inputType="text"
            android:id="@+id/editTextRecFoodURL"
            android:hint="Recipe Food URL"/>

        <EditText
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextRecFoodURL"
            android:id="@+id/editTextRecLikeCount"
            android:inputType="number"
            android:hint="Recipe Like Count"/>

        <EditText
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/editTextRecLikeCount"
            android:id="@+id/editTextRecIngrdients"
            android:hint="Ingredient Numbers(use , to seperate vales)"/>


        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_below="@+id/editText"-->
        <!--android:id="@+id/editTextImageUrl"-->
        <!--android:hint="Recipe Image URL"-->
        <!--android:textAlignment="center"/>-->
        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_below="@+id/editTextImageUrl"-->
        <!--android:id="@+id/editTextRecipeUrl"-->
        <!--android:hint="Recipe URL"-->
        <!--android:textAlignment="center"/>-->


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relativeRecLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddRec"
            android:text="Add"/>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnViewRec"
            android:text="View Data"
            android:layout_toRightOf="@+id/btnAddRec"/>

    </RelativeLayout>

</RelativeLayout>